{
    // Don't auto-complete PHP, let PHP-Intellisense work it out.
    "php.suggest.basic": false,

    // Allow tailwind's custom directives
    "css.lint.unknownAtRules": "ignore",
    "css.validate": false,

    // Explicitly set the php-cs-fixer path
    "php-cs-fixer.executablePath": "${workspaceRoot}/vendor/bin/php-cs-fixer",
    "php-cs-fixer.executablePathWindows": "${workspaceRoot}\\vendor\\bin/php-cs-fixer",

    "[php]":{
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "junstyle.php-cs-fixer"
    },

    "yaml.schemas": {
        "resources/json/schemas/grants.schema.json": [
            "resources/yaml/grants.yaml",
        ],
        "resources/json/schemas/menu.schema.json": [
            "resources/yaml/menu.yaml",
        ],
        "resources/json/schemas/permissions.schema.json": [
            "resources/yaml/permissions.yaml",
        ],
        "resources/json/schemas/roles.schema.json": [
            "resources/yaml/roles.yaml",
        ],
        "resources/json/schemas/redirects.schema.json": [
            "resources/yaml/redirects.yaml",
        ],
        "resources/json/schemas/scheduled-mails.schema.json": [
            "resources/assets/yaml/scheduled-mails.yaml",
        ]
    },
}
