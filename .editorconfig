root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 80

[*.md]
trim_trailing_whitespace = false

[*.{js,jsx,css,scss,xml,yaml,yml}]
indent_style = space
indent_size = 2

[resources/assets/**.json]
indent_size = 2

[makefile]
indent_style = tab
